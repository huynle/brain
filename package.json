{
  "name": "@brain/api",
  "version": "0.1.0",
  "description": "REST API service for AI agent memory and knowledge management",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "brain": "./src/cli/brain.ts",
    "brain-server": "./src/cli/server.ts",
    "brain-runner": "./src/runner/index.ts",
    "do-work": "./src/cli/do-work.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huynle/brain.git"
  },
  "keywords": [
    "ai",
    "memory",
    "knowledge-graph",
    "zettelkasten",
    "rest-api",
    "bun",
    "hono",
    "ai-agents",
    "mcp"
  ],
  "author": "Brain Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huynle/brain/issues"
  },
  "homepage": "https://github.com/huynle/brain#readme",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check src/",
    "format": "bunx @biomejs/biome format --write src/",
    "prepublishOnly": "bun run typecheck"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.2.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/react": "^19.2.10",
    "hono": "^4.6.0",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5.0.0"
  }
}
